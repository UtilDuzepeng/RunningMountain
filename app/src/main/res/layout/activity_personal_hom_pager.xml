<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:srlAccentColor="#00000000"
    app:srlEnablePreviewInEditMode="true"
    android:id="@+id/personal_smart"
    app:srlPrimaryColor="#00000000"
    tools:context="com.miaofen.xiaoying.activity.personal.PersonalHomPagerActivity">

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlTextLoading="@string/refreshing" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/personal_hander" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/AF4F4F4" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="资料"
                    android:textColor="@color/A212A3D"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/view_data"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_4"
                    android:layout_below="@+id/tv_data"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/blue_back_circular" />

                <TextView
                    android:id="@+id/tv_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_toRightOf="@+id/tv_data"
                    android:text="计划"
                    android:textColor="@color/A686E7A"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_plan"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_4"
                    android:layout_below="@+id/tv_plan"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_toRightOf="@+id/tv_data"
                    android:background="@drawable/blue_back_circular" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/AF4F4F4" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personal_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlTextLoading="@string/loading" />

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
