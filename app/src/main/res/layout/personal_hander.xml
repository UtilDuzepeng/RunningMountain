<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/personal_backdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_202"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/geren_back_icon"
        app:layout_collapseMode="parallax" />

    <ImageView
        android:id="@+id/personal_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@drawable/arrow_back_outline_whll_icon" />


    <LinearLayout
        android:id="@+id/linear_hander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_bar_back"
        android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/semiprimitive_back_well"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_19">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/pink_circle_back"
                android:drawableLeft="@drawable/jiaguanzhu_icon"
                android:drawablePadding="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_7"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_7"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_back_circular"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_7"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_7"
                android:text="@string/chat"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:text="@string/test_nickname"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_11"
            android:drawableLeft="@drawable/renzheng_icon"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/test_motorcycle"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_18"
            android:lines="1"
            android:text="@string/test_signature"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:textColor="@color/A2A82FA"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/fans"
                android:textColor="@color/A686E7A"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="102"
                android:layout_marginLeft="@dimen/dp_18"
                android:textColor="@color/A2A82FA"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/follow"
                android:textColor="@color/A686E7A"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:layout_marginLeft="@dimen/dp_18"
                android:textColor="@color/A2A82FA"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/released_plans"
                android:textColor="@color/A686E7A"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_head_portrait"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_115"
        android:layout_marginRight="@dimen/dp_24"
        android:src="@drawable/peach_circular_back" />


</RelativeLayout>
