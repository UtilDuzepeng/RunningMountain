<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/avatar_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="天剑骑士董超"
                android:textColor="@color/A212A3D"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/renzheng_icon"
                android:drawablePadding="@dimen/dp_6"
                android:text="豪爵铃木 2019款 GSX 250R-A ABS版"
                android:textColor="@color/A686E7A"
                android:textSize="@dimen/sp_8" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="10-16 12:35"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="晋阳湖公园约起！"
        android:textColor="@color/A212A3D"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lines="2"
        android:text="趁这几天天气好，我想抓住秋天的小尾巴。有没有志同道合的小伙伴一起去晋阳湖公园溜一圈儿？"
        android:textColor="@color/A686E7A"
        android:textSize="@dimen/sp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/AF4F4F4" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ditu_icon"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="始发地"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="黑坨村"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="距离 2.1km"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:background="@drawable/blue_border"
            android:textColor="@color/A2A82FA"
            android:textSize="@dimen/sp_9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/huodong_icon"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="目的地"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="晋阳湖湿地公园"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lianjie_icon"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="途径地"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="二许线、南中环街、南中环辅路、新晋祠路"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shijian_icon"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="起止时间"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="10-18 09:00 至 10-18 18:30"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_111"
            android:layout_height="@dimen/dp_111"
            android:layout_marginRight="@dimen/dp_3"
            android:scaleType="fitXY"
            android:src="@drawable/seize_seat_icon" />

        <ImageView
            android:layout_width="@dimen/dp_111"
            android:layout_height="@dimen/dp_111"
            android:layout_marginRight="@dimen/dp_3"
            android:scaleType="fitXY"
            android:src="@drawable/seize_seat_icon" />

        <ImageView
            android:layout_width="@dimen/dp_111"
            android:layout_height="@dimen/dp_111"
            android:scaleType="fitXY"
            android:src="@drawable/seize_seat_icon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wathet_backger"
            android:drawableLeft="@drawable/biaoqian_icon"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_9"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_3"
            android:text="太原"
            android:textColor="@color/A2A82FA"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/wathet_backger"
            android:drawableLeft="@drawable/biaoqian_icon"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_9"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_3"
            android:text="晋阳湖湿地公园"
            android:textColor="@color/A2A82FA"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="horizontal">

        <com.miaofen.xiaoying.view.DrawableTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/shoucang_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="729" />


        <com.miaofen.xiaoying.view.DrawableTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/pinglun_iocn"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="402" />

        <com.miaofen.xiaoying.view.DrawableTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/zhuanfa_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="分享" />

    </LinearLayout>


</LinearLayout>
