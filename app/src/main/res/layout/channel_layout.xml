<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_name"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/point_icon" />

        <TextView
            android:id="@+id/tv_planTripsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/blue_border"
            android:text="二许线"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_planTripsRemark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_6"
            android:scaleType="fitXY"
            android:background="@drawable/tujingdi_icon"
            android:layerType="software" />


        <TextView
            android:id="@+id/tv_planTripsRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:maxLines="2"
            android:lineSpacingExtra="3dp"
            android:textSize="@dimen/sp_12"
            android:text="路边有一家上海风味小笼包店，店里的蟹粉小笼包和鸭血粉丝汤味道相当正宗，物美价廉"
            android:textColor="@color/A959CA7" />


    </LinearLayout>


</LinearLayout>
