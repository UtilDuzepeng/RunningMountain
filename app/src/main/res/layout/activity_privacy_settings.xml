<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.miaofen.xiaoying.activity.PrivacySettingsActivity">

    <include layout="@layout/toobar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_22"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_message_notification"
            android:layout_centerVertical="true"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_15" />

        <com.miaofen.xiaoying.view.SwitchButton
            android:id="@+id/swit_message_notification"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:isScrollContainer="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/AF4F4F4"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_22"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certified_vehicle_display"
            android:layout_centerVertical="true"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_15" />

        <com.miaofen.xiaoying.view.SwitchButton
            android:id="@+id/swit_exhibition"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/AF4F4F4"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"/>


</LinearLayout>