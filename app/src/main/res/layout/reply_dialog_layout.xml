<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_reply_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/semiprimitive_back_well"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_Number_Replies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:src="@drawable/guanbi_icon" />

        <TextView
            android:id="@+id/tv_Number_Replies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_toRightOf="@+id/image_Number_Replies"
            android:text=""
            android:gravity="center"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/relative_reply"
        android:background="@color/AF4F4F4"/>



    <com.miaofen.xiaoying.view.RefreshLayout
        android:id="@+id/refresh_reply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_ed"
        android:layout_below="@+id/relative_reply"/>

    <LinearLayout
        android:id="@+id/linear_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/bianji_bi_icon"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/enter_comments"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/image_like"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="0.01"
            android:src="@drawable/dianzan_icon" />

        <ImageView
            android:id="@+id/image_forward"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_weight="0.01"
            android:src="@drawable/zhuanfa_icon" />

    </LinearLayout>

</RelativeLayout>
