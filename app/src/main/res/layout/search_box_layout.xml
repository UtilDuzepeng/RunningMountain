<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15">

    <RelativeLayout
        android:id="@+id/show_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_0"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@drawable/search_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="@dimen/dp_58"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableRight="@drawable/down_icon"
            android:gravity="center_vertical"
            android:text="太原"
            android:drawablePadding="@dimen/dp_6"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_13" />


        <View
            android:id="@+id/view_division"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/tv_position"
            android:layout_centerVertical="true"
            android:background="@color/D9D9D9" />

        <LinearLayout
            android:id="@+id/linear_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view_division">

            <TextSwitcher
                android:id="@+id/textSwitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
