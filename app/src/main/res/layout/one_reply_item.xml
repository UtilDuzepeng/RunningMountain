<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/reply_item_avatarUrl"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/avatar_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toRightOf="@+id/reply_item_avatarUrl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reply_item_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我"
                android:maxLines="1"
                android:textColor="@color/A12488D"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/reply_image_item"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_14"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv_reply_number"
                    android:src="@drawable/dianzan_line" />

                <TextView
                    android:id="@+id/tv_reply_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="111"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_reply_upper_strata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/grey_fillet_back"
            android:padding="@dimen/dp_10"
            android:text="孙娜恩：趁这几天天气好，我想抓住秋天的小尾巴。一起去吧！"
            android:textColor="@color/A686E7A"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/tv_replu_item_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="国庆没玩爽，这几天休年假，约呗！"
            android:textColor="@color/A212A3D"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-16 12:35"
                    android:textColor="@color/A686E7A"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · " />

                <TextView
                    android:id="@+id/tv_reply_second_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:textColor="@color/A686E7A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_reply_delete_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/FF6555"
                android:text="@string/delete_comments"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
